= render 'devise/shared/auth_layout' do
  - guest_email = 'guest@example.com'
  - guest_password = 'password'
  .space-y-6
    .rounded-2xl.border.border-gray-200.bg-gray-50.p-5.shadow-sm.space-y-4.text-sm.text-gray-700
      .space-y-1
        %p.font-semibold.text-gray-900= t('auth.login.guest_login.title')
        %p.font-mono.text-gray-800= t('auth.login.guest_login.email', email: guest_email)
        %p.font-mono.text-gray-800= t('auth.login.guest_login.password', password: guest_password)
      %button.inline-flex.items-center.justify-center.w-full.sm:w-auto.px-4.py-2.rounded-xl.font-semibold.text-sm.bg-blue-500.text-white.transition-colors.hover:bg-blue-600.focus-visible:outline.focus-visible:outline-2.focus-visible:outline-offset-2.focus-visible:outline-blue-500#js-guest-login-button
        = t('auth.login.guest_login.button')
      %p.text-xs.text-gray-500.leading-relaxed
        = t('auth.login.guest_login.note')

    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'h-full' }) do |f|
      .flex.flex-col.gap-5.auto-cols-max.h-full
        .field
          = f.label :email, t('auth.login.email_label')
          = f.email_field :email, autofocus: true, autocomplete: 'email'
        .field
          = f.label :password, t('auth.login.password_label')
          = f.password_field :password, autocomplete: 'current-password'
        .mt-auto
          = f.submit t('auth.login.submit'), {class: 'submit-button'}
        .text-link.underline.text-right{ class: '[&>a]:py-1 [&>a]:inline-block' }
          = render 'devise/shared/links'

{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@types/node": "^24.9.2",
    "esbuild": "^0.25.12",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.ts --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "openapi:generate": "openapi-typescript swagger/swagger.yaml -o app/javascript/src/types/generated/openapi.d.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hotwired/turbo-rails": "^8.0.20",
    "filepond": "^4.32.10",
    "filepond-plugin-file-validate-size": "^2.2.8",
    "filepond-plugin-image-edit": "^1.6.3",
    "filepond-plugin-image-exif-orientation": "^1.0.11",
    "filepond-plugin-image-preview": "^4.6.12",
    "tributejs": "^5.1.3"
  }
}

{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@types/node": "^24.9.2",
    "esbuild": "^0.25.12",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.ts --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "openapi:generate": "openapi-typescript swagger/swagger.yaml -o app/javascript/src/types/generated/openapi.d.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hotwired/turbo-rails": "^8.0.20"
  }
}
